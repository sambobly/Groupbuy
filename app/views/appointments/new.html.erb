<%= form_for @appointment, url: {action: "create"} do |f| %>

<div class="row">
	<div class="2u label">Appointment Name</div>
	<div class="4u"><%= f.text_field :name %></div>
</div>

<div class="row">
	<div class="2u label">Start Time</div>
	<div class="2u"><%= f.text_field :start_time %></div>
</div>


<div class="row">
	<div class="2u label">Patient</div>
	<div class="4u"><%= f.text_field :patient_name %></div>
</div>

<div class="row">
	<div class="2u label">Doctor</div>
	<div class="4u"><%= f.text_field :doctor %></div>
</div>

    <%= f.submit "Create Appointment" %>

<% end %>