<%= form_for( @appointment, url: {action: "create"}, validate: true) do |f| %>

<div class="row">
	<div class="2u label">Appointment Name</div>
	<div class="4u"><%= f.text_field :name %></div>
</div>
    <div class="2u label">Start</div>
    <p id="start_time">
      <input type="text" class="date start" />
      <input type="text" class="time start" />
    </p>

    <script type="text/javascript" src="bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="jquery.timepicker.js"></script>
    <script type="text/javascript" src="jquery.datepair.js"></script>
    <script>
        // initialize input widgets first
        $('#start_time .time').timepicker({
            'showDuration': true,
            'timeFormat': 'g:ia'
        });

        $('#start_time .date').datepicker({
            'format': 'm/d/yyyy',
            'autoclose': true
        });

        // initialize datepair
        $('#start_time').datepair();
    </script>


<div class="row">
  <div class="2u label"><%= f.label :end_time %></div>
  <div class="2u"><%= f.text_field :end_time %></div>
</div>

<div class="row">
	<div class="2u label">Patient</div>
	<div class="4u"><%= f.text_field :patient_name %></div>
</div>

<div class="row">
	<div class="2u label">Doctor</div>
	<div class="4u"><%= f.text_field :doctor_id %></div>
</div>

    <%= f.submit "Create Appointment" %>
<div class ="row">
  <% if @appointment.errors.any? %>
      <h2>Errors</h2>
      <ul>
  <% @appointment.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
      </ul>
  <% end %>
</div>

<% end %>