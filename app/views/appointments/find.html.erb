
<% form_tag "/appointments/find" do %>
    <%= text_field_tag params[:search_string] %>
    <%= submit_tag "find"%>


<% end %>
Results
<% @appointments.limit(10).each do |appointment| %>
    <%= (appointment.doctor.name)%>
    <%= (appointment.id) %>
    <%= (appointment.patient.name)%>
    <%=  appointment.start_time %>
    <%=  appointment.end_time %><br/>
    <%=  appointment.start_date %>
    <%=  appointment.end_date %><br/>
    <%= button_to 'Check IN', line_items_path(appointment_id: appointment)%>
    <%= button_to "Delete", {:controller => :appointments, :action => 'destroy', :id => appointment.id }, :method => :delete %>
    <%= button_to "Update", {:controller => :appointments, action: 'edit', :id => appointment.id }, method: :get%>
<% end %>
