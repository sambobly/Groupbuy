<h1>Listing widgets</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Invoice</th>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Tax</th>
      <th>Discount</th>
      <th>Total</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @widgets.each do |widget| %>
      <tr>
        <td><%= widget.product %></td>
        <td><%= widget.invoice %></td>
        <td><%= widget.item %></td>
        <td><%= widget.price %></td>
        <td><%= widget.quantity %></td>
        <td><%= widget.tax %></td>
        <td><%= widget.discount %></td>
        <td><%= widget.total %></td>
        <td><%= widget.product %></td>
        <td><%= link_to 'Show', widget %></td>
        <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
        <td><%= link_to 'Destroy', widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Widget', new_widget_path %>
