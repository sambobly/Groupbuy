<h1>Listing payments</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Doctor</th>
      <th>Invoice</th>
      <th>Paymenttype</th>
      <th>Appointment</th>
      <th>Date</th>
      <th>Note</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.patient %></td>
        <td><%= payment.doctor %></td>
        <td><%= payment.invoice %></td>
        <td><%= payment.paymentType %></td>
        <td><%= payment.appointment %></td>
        <td><%= payment.date %></td>
        <td><%= payment.note %></td>
        <td><%= payment.total %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

