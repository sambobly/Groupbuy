<h1>Listing inovices</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Patient</th>
      <th>Doctor</th>
      <th>Appointment</th>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Tax</th>
      <th>Discount</th>
      <th>Total</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inovices.each do |inovice| %>
      <tr>
        <td><%= inovice.date %></td>
        <td><%= inovice.patient %></td>
        <td><%= inovice.doctor %></td>
        <td><%= inovice.appointment %></td>
        <td><%= inovice.item %></td>
        <td><%= inovice.price %></td>
        <td><%= inovice.quantity %></td>
        <td><%= inovice.tax %></td>
        <td><%= inovice.discount %></td>
        <td><%= inovice.total %></td>
        <td><%= inovice.note %></td>
        <td><%= link_to 'Show', inovice %></td>
        <td><%= link_to 'Edit', edit_inovice_path(inovice) %></td>
        <td><%= link_to 'Destroy', inovice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

