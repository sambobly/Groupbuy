<h1>Listing tickets</h1>

<table>
  <thead>
    <tr>
      <th>Consumer</th>
      <th>Bid</th>
      <th>Merchandise</th>
      <th>Win</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.consumer %></td>
        <td><%= ticket.bid %></td>
        <td><%= ticket.merchandise %></td>
        <td><%= ticket.win %></td>
        <td><%= ticket.value %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
