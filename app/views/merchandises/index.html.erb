<h1>Listing merchandises</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Category</th>
      <th>Consumer</th>
      <th>Title</th>
      <th>Description</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merchandises.each do |merchandise| %>
      <tr>
        <td><%= merchandise.value %></td>
        <td><%= merchandise.category %></td>
        <td><%= merchandise.consumer %></td>
        <td><%= merchandise.title %></td>
        <td><%= merchandise.description %></td>
        <td><%= merchandise.start %></td>
        <td><%= merchandise.end %></td>
        <td><%= link_to 'Show', merchandise %></td>
        <td><%= link_to 'Edit', edit_merchandise_path(merchandise) %></td>
        <td><%= link_to 'Destroy', merchandise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

