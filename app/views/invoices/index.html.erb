<h1>Listing invoices</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Patient</th>
      <th>Doctor</th>
      <th>Appointment</th>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Tax</th>
      <th>Discount</th>
      <th>Total</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date %></td>
        <td><%= invoice.patient %></td>
        <td><%= invoice.doctor %></td>
        <td><%= invoice.appointment %></td>
        <td><%= invoice.item %></td>
        <td><%= invoice.price %></td>
        <td><%= invoice.quantity %></td>
        <td><%= invoice.tax %></td>
        <td><%= invoice.discount %></td>
        <td><%= invoice.total %></td>
        <td><%= invoice.note %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invoice', new_invoice_path %>
